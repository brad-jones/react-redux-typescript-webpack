{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "jsx": "react",
        "sourceMap": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "~*": [
                "src/*"
            ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}